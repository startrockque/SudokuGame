<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/content_bandeau_infos"
        android:id="@+id/bandeau_niveau"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"/>

    <include layout="@layout/content_plateau"
        android:id="@+id/plateau"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"/>

    <include layout="@layout/content_bandeau_chiffres"
        android:id="@+id/bandeau_chiffres"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.2"/>

</LinearLayout>